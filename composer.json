{
    "name": "vaimo/composer-patches",
    "type": "composer-plugin",
    "license": "MIT",
    "description": "Provides a way to patch Composer packages with optional version restriction and support for applying bundled patches (patches that patch more than one package). Includes new 'patch' command for composer",
    "authors": [
        {
            "name": "Allan Paiste",
            "email": "allan.paiste@vaimo.com"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "composer-plugin-api": "^1.0"
    },
    "support": {
        "source": "https://github.com/vaimo/composer-patches",
        "docs": "https://github.com/vaimo/composer-patches",
        "issues": "https://github.com/vaimo/composer-patches/issues"
    }, 
    "keywords": [
        "composer plugin", 
        "patching", 
        "version restriction", 
        "indirect restrictions", 
        "patch description", 
        "remote patch files", 
        "downloaded patches", 
        "package bug-fix", 
        "package patches", 
        "patch exclusion", 
        "development patches", 
        "hot-fixes", 
        "environment flags", 
        "skipped packages", 
        "patch skipping", 
        "maintenance tools", 
        "multiple formats", 
        "patch branching", 
        "multi-version patches",
        "bundled patches",
        "patch command",
        "patch from vendor"
    ],
    "minimum-stability": "dev",      
    "extra": {
        "class": "Vaimo\\ComposerPatches\\Plugin",
        "patcher_plugin": true
    },
    "autoload": {
        "psr-4": {
            "Vaimo\\ComposerPatches\\": "src"
        }
    }
}